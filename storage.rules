rules_version = '2';

// Firebase Storage Security Rules for DMO Press Release Platform
service firebase.storage {
  match /b/{bucket}/o {

    // Organization-based access control for release images
    // Note: Org-level security is enforced by Firestore rules (users can only create
    // releases in their own org). Storage rules verify authentication and file type.
    match /orgs/{orgId}/releases/{releaseId}/{allPaths=**} {
      // Allow authenticated users to read
      allow read: if request.auth != null;
      
      // Allow authenticated users to write images with validation
      allow write: if request.auth != null &&
                      request.resource.size < 10 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
      
      // Allow authenticated users to delete
      allow delete: if request.auth != null;
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
